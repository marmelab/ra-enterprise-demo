.PHONY: help

help:
	@grep -E '^[a-zA-Z0-9_-]+:.*?## .*$$' $(MAKEFILE_LIST) | sort | awk 'BEGIN {FS = ":.*?## "}; {printf "\033[36m%-30s\033[0m %s\n", $$1, $$2}'


install: package.json ## Install dependencies
	yarn install

start: ## Run the project for development
	yarn start

build: ## Build the project for production
	yarn build
