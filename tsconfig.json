{
  "compilerOptions": {
    "target": "ES5",
    "module": "esnext",
    "lib": [
      "es2019",
      "DOM"
    ],
    "allowJs": true,
    "jsx": "react-jsx",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src"
  ]
}
